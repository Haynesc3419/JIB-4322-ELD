<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerview_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?android:attr/colorBackground">

        <!-- Profile Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:background="?android:attr/colorBackground">

            <!-- Profile Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/account_circle_24px"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircleImageView"/>

            <!-- Profile Name -->
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_profile_name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="8dp"/>

            <!-- Profile Email -->
            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_profile_email"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="8dp"/>

            <!-- Distance Driven -->
            <TextView
                android:id="@+id/distance_driven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="8dp"/>

            <!-- Current Timezone -->
            <TextView
                android:id="@+id/time_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="16dp"/>

            <!-- Regulations Button -->
            <Button
                android:id="@+id/regulations_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGULATIONS"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/status_valid"
                android:layout_marginBottom="16dp"/>

            <!-- Sign out Button -->
            <Button
                    android:id="@+id/sign_out_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign out"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/status_valid"
                    android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

